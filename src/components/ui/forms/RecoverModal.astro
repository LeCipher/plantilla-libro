---
// Importar los componentes necesarios de archivos individuales
import EmailInput from "./input/EmailInput.astro";
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";

// Objeto de configuración para la personalización del componente
const config = {
  id: "hs-toggle-between-modals-recover-modal", // Identificador del modal
  title: "¿Olvidaste tu contraseña?", // Título principal del modal
  subTitle: "¿Recuerdas tu contraseña?", // Texto del subtítulo
  loginBtn: "Inicia sesión aquí", // Texto para el botón de inicio de sesión
  loginBtnDataHS: "#hs-toggle-between-modals-login-modal", // Enlace destino para el botón de inicio de sesión
};
---

<!-- Elemento raíz del modal con su id y estilos -->
<div
  id={config.id}
  class="hs-overlay absolute start-0 top-0 z-50 hidden h-full w-full hs-overlay-backdrop-open:bg-neutral-900/90"
>
  <!-- Contenedor del contenido del modal -->
  <div
    class="m-3 mt-0 opacity-0 transition-all ease-out hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 sm:mx-auto sm:w-full sm:max-w-lg"
  >
    <div class="mx-auto w-full max-w-md p-6">
      <!-- Caja principal que contiene los elementos del modal -->
      <div
        class="mt-7 rounded-xl border border-neutral-200 bg-neutral-100 shadow-xs dark:border-neutral-700 dark:bg-neutral-800"
      >
        <div class="p-4 sm:p-7">
          <div class="text-center">
            <!-- Título principal del modal -->
            <h2
              class="block text-2xl font-bold text-neutral-800 dark:text-neutral-200"
            >
              {config.title}
            </h2>
            <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
              {config.subTitle}
              <!-- Botón que, al hacer clic, abre el modal de inicio de sesión -->
              <button
                class="rounded-lg p-1 font-medium text-orange-400 decoration-2 outline-hidden ring-zinc-500 hover:underline focus-visible:ring-3 dark:text-orange-400 dark:ring-zinc-200 dark:focus:outline-hidden"
                data-hs-overlay={config.loginBtnDataHS}
              >
                {config.loginBtn}
              </button>
            </p>
          </div>

          <div class="mt-5">
            <!-- Formulario para la recuperación de contraseña -->
            <form>
              <div class="grid gap-y-4">
                <!-- Campo de entrada de correo electrónico importado desde el componente EmailInput -->
                <EmailInput id="recover-email" errorId="recover-email-error"/>
                <!-- Botón para restablecer la contraseña importado desde el componente AuthBtn -->
                <AuthBtn title="Restablecer contraseña" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
