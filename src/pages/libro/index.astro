---
// Importar los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Descarga un Capítulo Gratis"
    url="https://www.ciclismolibro.com/muestra-gratuita"
  />

  <HeroSection
    title=`Pedalea hacia la Aventura con <span
        class="text-yellow-500 dark:text-yellow-400">Ciclismo Total</span>`
    subTitle="La guía definitiva para dominar el arte del ciclismo, desde técnicas esenciales hasta rutas épicas alrededor del mundo."
    primaryBtn="Explora el Contenido"
    primaryBtnURL="/capitulos"
    secondaryBtn="Contacta al equipo editorial"
    secondaryBtnURL="/contacto"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Basado en <span class="font-bold">8.5k</span> evaluaciones`
    src={heroImage}
    alt="Ciclista profesional descendiendo una montaña al atardecer"
  />

  <ClientsSection
    title="Recomendado por expertos en ciclismo"
    subTitle="El libro preferido de leyendas del pedal y organizaciones líderes en deportes de aventura."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Domina todas las disciplinas del ciclismo"
    subTitle="Desde el entrenamiento físico hasta la mecánica básica, nuestro libro te equipa con el conocimiento necesario para superar cualquier desafío en rutas urbanas, de montaña o competencias profesionales."
    src={featureImage}
    alt="Ciclistas en diferentes disciplinas: carretera, montaña y urbano"
    features={features}
  />

  <FeaturesNavs
    title=`Personaliza tu experiencia ciclista con <span class="text-yellow-500 dark:text-yellow-400">contenido especializado</span>`
    tabs={[
      {
        heading: "Planes de Entrenamiento",
        content:
          "Optimiza tu rendimiento con programas de entrenamiento científicos adaptados a todos los niveles. Mejora tu resistencia, velocidad y técnica con ejercicios específicos.",
        svg: "tools",
        src: tools,
        alt: "Ciclista midiendo su frecuencia cardíaca durante un entrenamiento",
        first: true,
      },
      {
        heading: "Rutas Globales",
        content:
          "Descubre más de 200 rutas certificadas por expertos, con mapas detallados, perfiles de elevación y consejos para cada tipo de terreno.",
        svg: "dashboard",
        src: dashboard,
        alt: "Mapa interactivo con destacadas rutas ciclistas mundiales",
        second: true,
      },
      {
        heading: "Mantenimiento Profesional",
        content:
          "Aprende técnicas profesionales de mantenimiento con guías paso a paso ilustradas. Desde cambios básicos hasta ajustes avanzados de componentes.",
        svg: "house",
        src: construction,
        alt: "Herramientas y componentes de bicicleta organizados en un taller",
      },
    ]}
  />

  <TestimonialsSection
    title="Transformando ciclistas"
    subTitle="Únete a la comunidad que está revolucionando su forma de pedalear gracias a nuestro contenido especializado."
    testimonials={[
      {
        content:
          "Este libro cambió completamente mi enfoque del ciclismo. Los planes de entrenamiento me ayudaron a mejorar mi rendimiento en un 40%, y las rutas recomendadas son simplemente espectaculares.",
        author: "Carlos Méndez",
        role: "Ciclista Profesional | Team MountainPro",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description:
          "kilómetros recorridos por nuestros lectores en rutas certificadas",
      },
      {
        count: "89%",
        description:
          "mejoría en el rendimiento físico reportada por nuestros usuarios",
      },
      {
        count: "60%",
        description:
          "reducción en lesiones gracias a las técnicas adecuadas",
      },
      {
        count: "4.7x",
        description: "mejor relación costo-beneficio vs otros métodos de entrenamiento",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Únete a la revolución ciclista"
    subTitle="Ciclismo Total es más que un libro: es una comunidad global apasionada por las dos ruedas. Descubre contenido exclusivo y eventos especiales."
    url="https://www.ciclismolibro.com/club-exclusivo"
  />
</MainLayout>